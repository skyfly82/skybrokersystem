# Application Configuration
APP_NAME="SkyBrokerSystem"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_VERSION=6.0.0

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=skybrokersystem
DB_USERNAME=root
DB_PASSWORD=password

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sbs_cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@skybrokersystem.com"
MAIL_FROM_NAME="SkyBrokerSystem"

# Mailpit Configuration (Development)
MAILPIT_HOST=mailpit
MAILPIT_PORT=1025

# Admin Configuration
ADMIN_EMAIL=admin@skybrokersystem.com
SUPPORT_EMAIL=support@skybrokersystem.com

# Courier Services Configuration
# InPost
INPOST_API_URL=https://api-shipx-pl.easypack24.net
INPOST_TOKEN=your_inpost_token
INPOST_ORGANIZATION_ID=your_organization_id
INPOST_SANDBOX=true

# DHL
DHL_API_URL=https://api-test.dhl.com
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_SANDBOX=true

# DPD
DPD_API_URL=https://dpdservices.dpd.com.pl/DPDPackageObjServicesService/DPDPackageObjServices
DPD_USERNAME=your_dpd_username
DPD_PASSWORD=your_dpd_password
DPD_SANDBOX=true

# Payment Providers Configuration
# Simulation Provider
PAYMENT_SIMULATION_ENABLED=true
PAYMENT_SIMULATION_AUTO_COMPLETE=100.00

# PayNow
PAYNOW_ENABLED=false
PAYNOW_API_URL=https://api.paynow.pl
PAYNOW_API_KEY=your_paynow_api_key
PAYNOW_SIGNATURE_KEY=your_paynow_signature_key
PAYNOW_SANDBOX=true

# Stripe
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SANDBOX=true

# Payment Limits
PAYMENT_MIN_AMOUNT=1.00
PAYMENT_MAX_AMOUNT=50000.00
PAYMENT_DAILY_LIMIT=10000.00
PAYMENT_MONTHLY_LIMIT=100000.00

# Payment Fees
PAYMENT_CARD_FEE_PERCENTAGE=2.9
PAYMENT_CARD_FEE_FIXED=0.30
PAYMENT_BANK_FEE_PERCENTAGE=1.5
PAYMENT_BANK_FEE_FIXED=0.00
PAYMENT_BLIK_FEE_PERCENTAGE=1.9
PAYMENT_BLIK_FEE_FIXED=0.00

# Additional Services Fees
PAYMENT_COD_FEE=3.50
PAYMENT_COD_PERCENTAGE=2.0
PAYMENT_INSURANCE_FEE=2.00
PAYMENT_INSURANCE_PERCENTAGE=1.0

# SMS Configuration
SMS_PROVIDER=log
SMS_MAX_LENGTH=160
SMS_SENDER=SkyBroker
SMS_QUEUE=sms
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=60

# SMSAPI Provider
SMSAPI_URL=https://api.smsapi.pl
SMSAPI_TOKEN=your_smsapi_token
SMSAPI_SENDER=SkyBroker
SMSAPI_TEST_MODE=true

# Twilio Provider
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+48123456789

# SMS Rate Limits
SMS_RATE_LIMIT_PER_MINUTE=10
SMS_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_DAY=500

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Telescope (Development)
TELESCOPE_ENABLED=true

# Horizon (Queue Dashboard)
HORIZON_ENABLED=true

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60

# File Storage
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Monitoring and Error Tracking
SENTRY_LARAVEL_DSN=
BUGSNAG_API_KEY=

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=SkyBrokerSystem

# Security
SECURE_HEADERS_ENABLED=true
FORCE_HTTPS=false
TRUSTED_PROXIES=*

# Features Flags
FEATURE_ADVANCED_REPORTING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_API_V2=false
FEATURE_MULTI_CURRENCY=false